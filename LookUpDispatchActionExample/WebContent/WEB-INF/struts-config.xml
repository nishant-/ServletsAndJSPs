<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
                               "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>
 <data-sources/>
 <form-beans>
  <form-bean name="LookupForm" type="com.nishant.LookupForm"/>
 </form-beans>
 <global-exceptions/>
 <global-forwards/>
 <action-mappings>
  <action input="/index.jsp" name="LookupForm" parameter="action"
   path="/test" scope="request" type="com.nishant.LookUpExample">
   <forward name="add" path="/add.jsp"/>
   <forward name="delete" path="/delete.jsp"/>
  </action>
 </action-mappings>
 <controller/>
 <message-resources parameter="com.nishant.application"/>
</struts-config>
